{
  "id": "tradle.pg.PersonalDetails",
  "type": "tradle.Model",
  "title": "Personal Details",
  "subClassOf": "tradle.Form",
  "style": {
    "backgroundColor": "#EBE1FA"
  },
  "properties": {
    "_t": {
      "type": "string",
      "readOnly": true
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "date",
      "maxDate": "18 years before",
      "minDate": "200 years before"
    },
    "name": {
      "type": "string",
      "displayAs": "{2} {1}",
      "group": [
        "lastName",
        "firstName"
      ],
      "readOnly": true,
      "displayName": true
    },
    "emailAddress": {
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
      "keyboard": "email-address",
      "range": "email"
    },
    "personal_group": {
      "type": "string",
      "title": "Personal Details",
      "list": [
        "firstName",
        "lastName",
        "emailAddress",
        "dateOfBirth"
      ]
    },
    "personal": {
      "type": "string",
      "displayAs": "{1}, {2}, {3}",
      "group": [
        "firstName",
        "lastName",
        "emailAddress",
        "dateOfBirth"
      ],
      "displayName": true,
      "readOnly": true
    }
  },
  "required": [
    "firstName",
    "lastName",
    "emailAddress",
    "dateOfBirth"
  ],
  "viewCols": [
    "firstName",
    "lastName",
    "emailAddress",
    "dateOfBirth"
  ]
}